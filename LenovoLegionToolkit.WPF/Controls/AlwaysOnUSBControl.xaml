<UserControl x:Class="LenovoLegionToolkit.WPF.Controls.AlwaysOnUSBControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"   
             xmlns:wpfui="clr-namespace:WPFUI.Controls;assembly=WPFUI"
             mc:Ignorable="d" 
             d:DesignWidth="800">
    <wpfui:CardControl
        Margin="0,0,0,8"
        Glyph="UsbStick24"
        Title="Always on USB"
        Subtitle="Charge USB devices, when the computer is in sleep, hibernation, or off mode.">
        <ComboBox
            Margin="0,0,0,8"
            Width="150"
            SelectedIndex="1">
            <ComboBoxItem Content="Off" />
            <ComboBoxItem Content="On, while sleeping" />
            <ComboBoxItem Content="On, always" />
        </ComboBox>
    </wpfui:CardControl>
</UserControl>
