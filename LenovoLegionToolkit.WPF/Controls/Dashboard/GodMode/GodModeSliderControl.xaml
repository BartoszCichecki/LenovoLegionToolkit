<UserControl
    x:Class="LenovoLegionToolkit.WPF.Controls.Dashboard.GodMode.GodModeSliderControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:LenovoLegionToolkit.WPF.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wpfui="http://schemas.lepo.co/wpfui/2022/xaml"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <wpfui:CardControl>
        <wpfui:CardControl.Header>
            <controls:CardHeaderControl x:Name="_cardControlHeader" />
        </wpfui:CardControl.Header>
        <StackPanel Orientation="Horizontal">
            <Slider
                x:Name="_slider"
                Width="250"
                Margin="32,0,0,0"
                VerticalAlignment="Center"
                IsSnapToTickEnabled="True"
                Value="-1" />
            <Label
                x:Name="_label"
                Width="50"
                Margin="8,0,0,0"
                HorizontalContentAlignment="Right"
                VerticalContentAlignment="Center"
                Content="{Binding ElementName=_slider, Path=Value}"
                ContentStringFormat="{}{0} W"
                FlowDirection="LeftToRight" />
        </StackPanel>
    </wpfui:CardControl>
</UserControl>
