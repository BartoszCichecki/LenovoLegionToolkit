<controls:AbstractRefreshingControl
    x:Class="LenovoLegionToolkit.WPF.Controls.Dashboard.TurnOffMonitorsControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:LenovoLegionToolkit.WPF.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:resources="clr-namespace:LenovoLegionToolkit.WPF.Resources"
    xmlns:wpfui="http://schemas.lepo.co/wpfui/2022/xaml"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <wpfui:CardControl Margin="0,0,0,8" Icon="Desktop24">
        <wpfui:CardControl.Header>
            <controls:CardHeaderControl Title="{x:Static resources:Resource.TurnOffMonitorsControl_Title}" Subtitle="{x:Static resources:Resource.TurnOffMonitorsControl_Message}" />
        </wpfui:CardControl.Header>
        <wpfui:Button
            x:Name="_turnOffButton"
            MinWidth="120"
            Click="TurnOffButton_Click"
            Content="{x:Static resources:Resource.TurnOffMonitorsControl_TurnOff}" />
    </wpfui:CardControl>
</controls:AbstractRefreshingControl>
