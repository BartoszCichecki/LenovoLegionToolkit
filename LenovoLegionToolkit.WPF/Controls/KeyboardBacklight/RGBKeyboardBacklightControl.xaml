<controls:AbstractRefreshingControl
    x:Class="LenovoLegionToolkit.WPF.Controls.KeyboardBacklight.RGBKeyboardBacklightControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:LenovoLegionToolkit.WPF.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:kb="clr-namespace:LenovoLegionToolkit.WPF.Controls.KeyboardBacklight"
    xmlns:lib="clr-namespace:LenovoLegionToolkit.Lib;assembly=LenovoLegionToolkit.Lib"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:resources="clr-namespace:LenovoLegionToolkit.WPF.Resources"
    xmlns:wpfui="http://schemas.lepo.co/wpfui/2022/xaml"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" SharedSizeGroup="A" />
            <ColumnDefinition Width="*" SharedSizeGroup="A" />
            <ColumnDefinition Width="*" SharedSizeGroup="A" />
            <ColumnDefinition Width="*" SharedSizeGroup="A" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />

            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />

            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <wpfui:CardControl
            x:Name="_vantageWarningCard"
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="4"
            Margin="0,0,8,24"
            Icon="Warning24">
            <wpfui:CardControl.Header>
                <controls:CardHeaderControl Title="{x:Static resources:Resource.RGBKeyboardBacklightControl_VantageEnabled_Title}" Subtitle="{x:Static resources:Resource.RGBKeyboardBacklightControl_VantageEnabled_Message}" />
            </wpfui:CardControl.Header>
        </wpfui:CardControl>

        <wpfui:Button
            x:Name="_offPresetButton"
            Grid.Row="1"
            Grid.Column="0"
            Margin="0,0,8,24"
            HorizontalAlignment="Stretch"
            Click="PresetButton_Click"
            Content="{x:Static resources:Resource.RGBKeyboardBacklightControl_PresetOff}"
            Tag="{x:Static lib:RGBKeyboardBacklightPreset.Off}" />
        <wpfui:Button
            x:Name="_preset1Button"
            Grid.Row="1"
            Grid.Column="1"
            Margin="0,0,8,24"
            HorizontalAlignment="Stretch"
            Click="PresetButton_Click"
            Content="{x:Static resources:Resource.RGBKeyboardBacklightControl_Preset1}"
            Tag="{x:Static lib:RGBKeyboardBacklightPreset.One}" />
        <wpfui:Button
            x:Name="_preset2Button"
            Grid.Row="1"
            Grid.Column="2"
            Margin="0,0,8,24"
            HorizontalAlignment="Stretch"
            Click="PresetButton_Click"
            Content="{x:Static resources:Resource.RGBKeyboardBacklightControl_Preset2}"
            Tag="{x:Static lib:RGBKeyboardBacklightPreset.Two}" />
        <wpfui:Button
            x:Name="_preset3Button"
            Grid.Row="1"
            Grid.Column="3"
            Margin="0,0,8,24"
            HorizontalAlignment="Stretch"
            Click="PresetButton_Click"
            Content="{x:Static resources:Resource.RGBKeyboardBacklightControl_Preset3}"
            Tag="{x:Static lib:RGBKeyboardBacklightPreset.Three}" />

        <kb:RGBKeyboardBrightnessCardControl
            x:Name="_brightnessControl"
            Grid.Row="2"
            Grid.Column="0"
            Grid.ColumnSpan="4"
            Margin="0,0,8,0"
            OnChanged="CardControl_OnChanged" />
        <kb:RGBKeyboardEffectCardControl
            x:Name="_effectControl"
            Grid.Row="3"
            Grid.Column="0"
            Grid.ColumnSpan="4"
            Margin="0,0,8,0"
            OnChanged="CardControl_OnChanged" />
        <kb:RGBKeyboardSpeedCardControl
            x:Name="_speedControl"
            Grid.Row="4"
            Grid.Column="0"
            Grid.ColumnSpan="4"
            Margin="0,0,8,0"
            OnChanged="CardControl_OnChanged" />

        <controls:ColorCardControl
            x:Name="_zone1Control"
            Title="{x:Static resources:Resource.RGBKeyboardBacklightControl_Zone1}"
            Grid.Row="5"
            Grid.Column="0"
            Margin="0,0,8,8"
            VerticalAlignment="Top"
            Icon="Color24"
            OnChanged="CardControl_OnChanged">
            <controls:ColorCardControl.ContextMenu>
                <ContextMenu>
                    <wpfui:MenuItem
                        Click="SynchroniseZonesMenuItem_Click"
                        Header="Synchronise zones"
                        SymbolIcon="ArrowsBidirectional24" />
                </ContextMenu>
            </controls:ColorCardControl.ContextMenu>
        </controls:ColorCardControl>

        <controls:ColorCardControl
            x:Name="_zone2Control"
            Title="{x:Static resources:Resource.RGBKeyboardBacklightControl_Zone2}"
            Grid.Row="5"
            Grid.Column="1"
            Margin="0,0,8,8"
            VerticalAlignment="Top"
            Icon="Color24"
            OnChanged="CardControl_OnChanged">
            <controls:ColorCardControl.ContextMenu>
                <ContextMenu>
                    <wpfui:MenuItem
                        Click="SynchroniseZonesMenuItem_Click"
                        Header="Synchronise zones"
                        SymbolIcon="ArrowsBidirectional24" />
                </ContextMenu>
            </controls:ColorCardControl.ContextMenu>
        </controls:ColorCardControl>

        <controls:ColorCardControl
            x:Name="_zone3Control"
            Title="{x:Static resources:Resource.RGBKeyboardBacklightControl_Zone3}"
            Grid.Row="5"
            Grid.Column="2"
            Margin="0,0,8,8"
            VerticalAlignment="Top"
            Icon="Color24"
            OnChanged="CardControl_OnChanged">
            <controls:ColorCardControl.ContextMenu>
                <ContextMenu>
                    <wpfui:MenuItem
                        Click="SynchroniseZonesMenuItem_Click"
                        Header="Synchronise zones"
                        SymbolIcon="ArrowsBidirectional24" />
                </ContextMenu>
            </controls:ColorCardControl.ContextMenu>
        </controls:ColorCardControl>

        <controls:ColorCardControl
            x:Name="_zone4Control"
            Title="{x:Static resources:Resource.RGBKeyboardBacklightControl_Zone4}"
            Grid.Row="5"
            Grid.Column="3"
            Margin="0,0,8,8"
            VerticalAlignment="Top"
            Icon="Color24"
            OnChanged="CardControl_OnChanged">
            <controls:ColorCardControl.ContextMenu>
                <ContextMenu>
                    <wpfui:MenuItem
                        Click="SynchroniseZonesMenuItem_Click"
                        Header="Synchronise zones"
                        SymbolIcon="ArrowsBidirectional24" />
                </ContextMenu>
            </controls:ColorCardControl.ContextMenu>
        </controls:ColorCardControl>

    </Grid>

</controls:AbstractRefreshingControl>