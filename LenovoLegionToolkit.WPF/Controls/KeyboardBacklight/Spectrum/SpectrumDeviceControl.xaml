            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <controls:SpectrumKeyboardButtonControl
            Grid.Row="0"
            Grid.Column="6"
            Height="32"
            Margin="0,0,0,24"
            KeyCode="0x05DD" />

        <controls:SpectrumKeyboardControl
            x:Name="_keyboard"
            Grid.Row="2"
            Grid.RowSpan="5"
            Grid.Column="1"
            Grid.ColumnSpan="6"
            Padding="16" />

        <controls:SpectrumKeyboardButtonControl
            Grid.Row="1"
            Grid.Column="1"
            Margin="2"
            KeyCode="0x03EB" />
