<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net5.0-windows</TargetFramework>
    <RuntimeIdentifier>win-x64</RuntimeIdentifier>
    <OutputType>WinExe</OutputType>
    <ApplicationIcon>icon.ico</ApplicationIcon>
    <AssemblyName>Lenovo Legion Toolkit</AssemblyName>
	<Copyright>© 2022 Bartosz Cichecki</Copyright>
    <FileVersion>0.0.1</FileVersion>
    <Version>0.0.1</Version>
    <Nullable>enable</Nullable>
    <UseWPF>true</UseWPF>
    <SelfContained>false</SelfContained>
    <PublishSingleFile>true</PublishSingleFile>
    <IncludeAllContentForSelfExtract>true</IncludeAllContentForSelfExtract>
    <PublishUrl>publish\</PublishUrl>
  </PropertyGroup>
  <PropertyGroup>
    <ApplicationManifest>app.manifest</ApplicationManifest>
  </PropertyGroup>
  <ItemGroup>
    <None Remove="Fonts\Segoe Fluent Icons.ttf" />
    <None Remove="icon.ico" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Autofac" Version="6.3.0" />
    <PackageReference Include="Microsoft.CSharp" Version="4.7.0" />
    <PackageReference Include="Microsoft.Windows.Compatibility" Version="6.0.0" />
    <PackageReference Include="WPF-UI" Version="1.2.2-prerelease116" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\LenovoLegionToolkit.Lib\LenovoLegionToolkit.Lib.csproj" />
  </ItemGroup>
  <ItemGroup>
    <Resource Include="Fonts\Segoe Fluent Icons.ttf" />
    <Resource Include="icon.ico" />
  </ItemGroup>
</Project>