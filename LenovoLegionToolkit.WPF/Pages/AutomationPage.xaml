<Page
    x:Class="LenovoLegionToolkit.WPF.Pages.AutomationPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wpfui="clr-namespace:WPFUI.Controls;assembly=WPFUI"
    Title="Automation"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Style="{StaticResource UiPageScrollable}"
    mc:Ignorable="d">

    <StackPanel Margin="0,0,16,12">

        <TextBlock
            Margin="0,16,0,24"
            FontSize="24"
            FontWeight="Medium"
            Text="Actions" />

        <wpfui:CardControl
            Title="Enable"
            Margin="0,0,0,24"
            Subtitle="You can enabled and disable automation at any time.">
            <wpfui:ToggleSwitch
                x:Name="_enableAutomation"
                Margin="0,0,0,8"
                Click="EnableAutomation_Click" />
        </wpfui:CardControl>

        <StackPanel Margin="0,8,0,16" HorizontalAlignment="Right">
            <wpfui:Button
                x:Name="_newPipelineButton"
                Width="120"
                Content="New flow"
                IsEnabled="False" />
        </StackPanel>

        <StackPanel x:Name="_pipelinesStackPanel" />

    </StackPanel>

</Page>
