<Page
    x:Class="LenovoLegionToolkit.WPF.Pages.AutomationPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wpfui="clr-namespace:WPFUI.Controls;assembly=WPFUI"
    Title="Automation"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Style="{StaticResource UiPage}"
    mc:Ignorable="d">

    <Grid Margin="0,0,16,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0">
            <StackPanel Margin="0,0,0,12">

                <TextBlock
                    Margin="0,16,0,24"
                    FontSize="24"
                    FontWeight="Medium"
                    Text="Actions" />

                <wpfui:CardControl
                    Title="Enable"
                    Margin="0,0,0,24"
                    Subtitle="Lenovo Legion Toolkit must be running for actions to work.">
                    <wpfui:ToggleSwitch
                        x:Name="_enableAutomation"
                        Margin="0,0,0,8"
                        Click="EnableAutomation_Click" />
                </wpfui:CardControl>

                <StackPanel Margin="0,8,0,16" HorizontalAlignment="Right">
                    <wpfui:Button
                        x:Name="_newPipelineButton"
                        Width="120"
                        Click="NewPipelineButton_Click"
                        Content="Add new flow"
                        IsEnabled="False"
                        IsEnabledChanged="NewPipelineButton_IsEnabledChanged">
                        <wpfui:Button.ContextMenu>
                            <ContextMenu />
                        </wpfui:Button.ContextMenu>
                    </wpfui:Button>
                </StackPanel>

                <StackPanel x:Name="_pipelinesStackPanel" />

            </StackPanel>
        </ScrollViewer>

        <StackPanel
            x:Name="_saveRevertStackPanel"
            Grid.Row="1"
            Margin="12"
            HorizontalAlignment="Right"
            Orientation="Horizontal"
            Visibility="Collapsed">

            <wpfui:Button
                Width="120"
                Click="SaveButton_Click"
                Content="Save" />
            <wpfui:Button
                Width="120"
                Margin="12,0,0,0"
                Appearance="Secondary"
                Click="RevertButton_Click"
                Content="Revert" />

        </StackPanel>

    </Grid>

</Page>
