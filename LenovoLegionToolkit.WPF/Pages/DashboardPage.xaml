<Page x:Class="LenovoLegionToolkit.WPF.Pages.Dashboard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:uc="clr-namespace:LenovoLegionToolkit.WPF.Controls"
      mc:Ignorable="d" 
      Style="{StaticResource UiPageScrollable}"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Home">

    <StackPanel Margin="0,0,0,12">
        <TextBlock
            Grid.Row="0"
            Margin="0,16,0,24"
            FontSize="24"
            FontWeight="Medium"
            Text="Dashboard" />

        <uc:PowerModeControl />
        <uc:BatteryModeControl />
        <uc:AlwaysOnUSBControl />
        <uc:HybridModeControl />
        <uc:RefreshRateControl />
        <uc:DiscreteGPUControl />
        <uc:MiscControl />
    </StackPanel>
</Page>
