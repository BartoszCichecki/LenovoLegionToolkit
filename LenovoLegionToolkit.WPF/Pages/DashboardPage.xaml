<Page
    x:Class="LenovoLegionToolkit.WPF.Pages.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:LenovoLegionToolkit.WPF.Controls.Dashboard"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Home"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Style="{StaticResource UiPageScrollable}"
    mc:Ignorable="d">

    <Grid Margin="0,0,0,12">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition x:Name="_column1" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <StackPanel
            x:Name="_powerStackPanel"
            Grid.Row="0"
            Grid.Column="0"
            Margin="0,0,12,0">

            <TextBlock
                Margin="0,16,0,24"
                FontSize="24"
                FontWeight="Medium"
                Text="Power" />
            <controls:PowerModeControl />
            <controls:BatteryModeControl />
            <controls:AlwaysOnUSBControl />
        </StackPanel>

        <StackPanel
            x:Name="_graphicsStackPanel"
            Grid.Row="0"
            Grid.Column="1"
            Margin="0,0,12,0">
            <TextBlock
                Margin="0,16,0,24"
                FontSize="24"
                FontWeight="Medium"
                Text="Graphics" />
            <controls:HybridModeControl />
            <controls:RefreshRateControl />
            <controls:DiscreteGPUControl />

        </StackPanel>

        <StackPanel
            x:Name="_otherStackPanel"
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="2">

            <TextBlock
                Margin="0,16,0,24"
                FontSize="24"
                FontWeight="Medium"
                Text="Other" />

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition x:Name="_otherInnerColumn1" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <StackPanel
                    x:Name="_otherInnerLeftStackPanel"
                    Grid.Row="0"
                    Grid.Column="0"
                    Margin="0,0,12,0">
                    <controls:FlipToStartControl />
                    <controls:OverDriveControl />
                    <controls:WhiteKeyboardBacklightControl />
                </StackPanel>

                <StackPanel
                    x:Name="_otherInnerRightStackPanel"
                    Grid.Row="0"
                    Grid.Column="0"
                    Margin="0,0,12,0">
                    <controls:FnLockControl />
                    <controls:TouchpadLockControl />
                </StackPanel>

            </Grid>

        </StackPanel>

    </Grid>
</Page>
