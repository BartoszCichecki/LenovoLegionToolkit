<Page
    x:Class="LenovoLegionToolkit.WPF.Pages.Dashboard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:c="clr-namespace:LenovoLegionToolkit.WPF.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Home"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Style="{StaticResource UiPageScrollable}"
    mc:Ignorable="d">

    <StackPanel Margin="0,0,0,12">
        <TextBlock
            Grid.Row="0"
            Margin="0,16,0,24"
            FontSize="24"
            FontWeight="Medium"
            Text="Power" />
        <c:PowerModeControl />
        <c:BatteryModeControl />
        <c:AlwaysOnUSBControl />

        <TextBlock
            Grid.Row="0"
            Margin="0,16,0,24"
            FontSize="24"
            FontWeight="Medium"
            Text="Graphics" />
        <c:HybridModeControl />
        <c:RefreshRateControl />
        <c:DiscreteGPUControl />

        <TextBlock
            Grid.Row="0"
            Margin="0,16,0,24"
            FontSize="24"
            FontWeight="Medium"
            Text="Other" />
        <c:FlipToStartControl />
        <c:OverDriveControl />
        <c:FnLockControl />
        <c:TouchpadLockControl />
    </StackPanel>
</Page>
