<Page
    x:Class="LenovoLegionToolkit.WPF.Pages.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wpfui="clr-namespace:WPFUI.Controls;assembly=WPFUI"
    Title="Settings"
    d:DesignHeight="450"
    d:DesignWidth="800"
    IsVisibleChanged="SettingsPage_IsVisibleChanged"
    Style="{StaticResource UiPage}"
    mc:Ignorable="d">

    <StackPanel Margin="0,0,0,12">

        <wpfui:CardControl
            Title="Autorun"
            Margin="0,0,0,8"
            Glyph="Keyboard24"
            Subtitle="Start minimized to tray when you log in to Windows.">
            <ToggleButton
                x:Name="_autorunToggleButton"
                Margin="0,0,0,8"
                Click="AutorunToggleButton_Click" />
        </wpfui:CardControl>

        <wpfui:CardControl
            x:Name="_vantageCard"
            Title="Lenovo Vantage"
            Margin="0,0,0,8"
            Glyph="Keyboard24"
            Subtitle="Enable or disable Lenovo Vantage and it's service without uninstalling it.&#x0a;&#x0a;Restart is recommended after changing this option.">
            <ToggleButton
                x:Name="_vantageToggleButton"
                Margin="0,0,0,8"
                Click="VantageToggleButton_Click" />
        </wpfui:CardControl>

    </StackPanel>
</Page>
