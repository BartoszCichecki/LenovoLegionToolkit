<Page
    x:Class="LenovoLegionToolkit.WPF.Pages.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wpfui="clr-namespace:WPFUI.Controls;assembly=WPFUI"
    Title="Settings"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Style="{StaticResource UiPageScrollable}"
    mc:Ignorable="d">

    <StackPanel Margin="0,0,16,12">

        <TextBlock
            Grid.Row="0"
            Margin="0,0,0,24"
            FontSize="24"
            FontWeight="Medium"
            Text="Settings" />

        <wpfui:CardControl
            Title="Theme"
            Margin="0,0,0,8"
            Subtitle="Set light theme, dark theme or follow system settings.">
            <ComboBox
                x:Name="_themeComboBox"
                Width="150"
                Margin="0,0,0,8"
                SelectionChanged="ThemeComboBox_SelectionChanged"
                Visibility="Hidden" />
        </wpfui:CardControl>

        <wpfui:CardControl
            Title="Autorun"
            Margin="0,0,0,8"
            Subtitle="Start minimized to tray when you log in to Windows.">
            <wpfui:ToggleSwitch
                x:Name="_autorunToggle"
                Margin="0,0,0,8"
                Click="AutorunToggle_Click"
                Visibility="Hidden" />
        </wpfui:CardControl>

        <wpfui:CardControl
            Title="Minimize on close"
            Margin="0,0,0,8"
            Subtitle="Always minimize to tray. Close with right click on tray icon.">
            <wpfui:ToggleSwitch
                x:Name="_minimizeOnCloseToggle"
                Margin="0,0,0,8"
                Click="MinimizeOnCloseToggle_Click"
                Visibility="Hidden" />
        </wpfui:CardControl>

        <wpfui:CardControl
            x:Name="_vantageCard"
            Title="Lenovo Vantage"
            Margin="0,0,0,8"
            Subtitle="Enable or disable Lenovo Vantage and it's service without uninstalling it.&#x0a;Restart is recommended after changing this option.">
            <wpfui:ToggleSwitch
                x:Name="_vantageToggle"
                Margin="0,0,0,8"
                Click="VantageToggle_Click"
                Visibility="Hidden" />
        </wpfui:CardControl>

        <TextBlock
            Grid.Row="0"
            Margin="0,16,0,0"
            FontSize="24"
            FontWeight="Medium"
            Text="Advanced" />

        <TextBlock
            Grid.Row="0"
            Margin="0,8,0,24"
            FontSize="12"
            Text="Do not change options below unless you really know what you are doing." />

        <wpfui:CardAction
            Margin="0,0,0,8"
            Click="PowerPlans_Click"
            Content="Windows Power Plans" />

        <wpfui:CardAction
            Margin="0,0,0,8"
            Click="CPUBoostModes_Click"
            Content="CPU Boost Modes" />

    </StackPanel>
</Page>
