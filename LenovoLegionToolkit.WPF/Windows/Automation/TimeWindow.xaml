<local:BaseWindow
    x:Class="LenovoLegionToolkit.WPF.Windows.Automation.TimeWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:LenovoLegionToolkit.WPF.Windows"
    xmlns:resources="clr-namespace:LenovoLegionToolkit.WPF.Resources"
    xmlns:utils="clr-namespace:LenovoLegionToolkit.WPF.Utils"
    xmlns:wpfui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="{x:Static resources:Resource.TimeWindow_TimeWindow_Title}"
    MinWidth="400"
    MaxWidth="400"
    FlowDirection="{x:Static utils:LocalizationHelper.Direction}"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    SizeToContent="Height"
    WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <wpfui:TitleBar
            Grid.Row="0"
            CanMaximize="false"
            ShowMaximize="false"
            ShowMinimize="false"
            UseSnapLayout="false" />

        <Grid
            Grid.Row="0"
            Height="24"
            Margin="12,8,12,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Column="0"
                VerticalAlignment="Center"
                FontSize="12"
                IsHitTestVisible="False"
                Text="{x:Static resources:Resource.TimeWindow_TimeWindow_Title}" />
        </Grid>

        <Grid Grid.Row="1" Margin="12,0,12,12">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0">
                <RadioButton
                    x:Name="_sunriseRadioButton"
                    Margin="0,0,0,8"
                    Click="RadioButton_Click"
                    Content="{x:Static resources:Resource.TimeWindow_Sunrise}"
                    GroupName="A" />
                <RadioButton
                    x:Name="_sunsetRadioButton"
                    Margin="0,0,0,8"
                    Click="RadioButton_Click"
                    Content="{x:Static resources:Resource.TimeWindow_Sunset}"
                    GroupName="A" />
                <RadioButton
                    x:Name="_timeRadioButton"
                    Margin="0,0,0,8"
                    Click="RadioButton_Click"
                    Content="{x:Static resources:Resource.TimeWindow_Time}"
                    GroupName="A" />

                <StackPanel
                    x:Name="_timePickerPanel"
                    Margin="28,0,0,0"
                    VerticalAlignment="Center"
                    IsEnabled="False"
                    Orientation="Horizontal">
                    <wpfui:NumberBox
                        x:Name="_timePickerHours"
                        ClearButtonEnabled="False"
                        IntegersOnly="True"
                        Max="23"
                        Min="0"
                        Step="1" />
                    <Label
                        Margin="4,0,4,0"
                        VerticalContentAlignment="Center"
                        Content=":" />
                    <wpfui:NumberBox
                        x:Name="_timePickerMinutes"
                        ClearButtonEnabled="False"
                        IntegersOnly="True"
                        Max="59"
                        Min="0"
                        Step="1" />
                    <Label
                        Margin="8,0,0,0"
                        VerticalContentAlignment="Center"
                        Content="(HH:MM)" />
                </StackPanel>
            </StackPanel>

            <Grid Grid.Row="1" Margin="0,8,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <wpfui:Button
                    Grid.Column="1"
                    MinWidth="100"
                    Appearance="Primary"
                    Click="SaveButton_Click"
                    Content="{x:Static resources:Resource.Save}" />

                <wpfui:Button
                    Grid.Column="2"
                    MinWidth="100"
                    Margin="8,0,0,0"
                    Click="CancelButton_Click"
                    Content="{x:Static resources:Resource.Cancel}" />

            </Grid>

        </Grid>

    </Grid>
</local:BaseWindow>
