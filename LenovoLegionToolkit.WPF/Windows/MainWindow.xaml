<Window
    x:Class="LenovoLegionToolkit.WPF.Windows.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wpfui="clr-namespace:WPFUI.Controls;assembly=WPFUI"
    Title="Lenovo Legion Toolkit"
    Width="1200"
    Height="650"
    MinWidth="650"
    MinHeight="650"
    Closing="MainWindow_Closing"
    IsVisibleChanged="MainWindow_IsVisibleChanged"
    SnapsToDevicePixels="true"
    StateChanged="MainWindow_StateChanged"
    Style="{StaticResource UiWindow}"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <wpfui:TitleBar x:Name="titleBar" Grid.Row="0" />

        <Grid
            Grid.Row="0"
            Height="24"
            Margin="12,8,150,6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock
                x:Name="_title"
                Grid.Column="0"
                VerticalAlignment="Center"
                FontSize="12"
                IsHitTestVisible="False"
                Text="Lenovo Legion Toolkit" />

            <wpfui:Hyperlink
                x:Name="_updateIndicator"
                Grid.Column="1"
                Content="Update available!"
                NavigateUri="https://github.com/BartoszCichecki/LenovoLegionToolkit/releases" />

        </Grid>

        <Grid Grid.Row="1" Margin="12,6,12,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <wpfui:NavigationStore
                x:Name="RootNavigation"
                Grid.Column="0"
                Margin="0,0,12,0" />

            <Frame x:Name="RootFrame" Grid.Column="1" />
        </Grid>
    </Grid>
</Window>
